{
	"compilerOptions": {
		"moduleResolution": "Node",
		"target": "es2015",
		"module": "ESNext",
		"outDir": "./lib",
		"declaration": true,
		"strict": true,
		"esModuleInterop": true,
		"skipLibCheck": true,
		"forceConsistentCasingInFileNames": true,
		"baseUrl": ".",
		"paths": {
			"tslib": ["./node_modules/tslib/tslib.d.ts"]
		}
	}
}
